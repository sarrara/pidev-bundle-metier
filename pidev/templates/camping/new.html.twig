{% extends 'back.html.twig' %}


{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">ajouter une randonnée</div>
                <div class="panel-body">
                    <div class="col-md-6">
                        {{ form_start(form, {'attr': {'id': 'form'}}) }}

                            <div class="form-group">
                                <label>Titre</label>
                                {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.nom) }}
                            </div>

                            <div class="form-group">
                                <label>Localisation</label>
                                {{ form_widget(form.localisation, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.localisation) }}
                            </div>
                        <div class="form-group">
                            <label>Nombre de Place</label>
                            {{ form_widget(form.nbrPlace, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.nbrPlace) }}
                        </div>
                        <div class="form-group">
                            <label>Prix</label>
                            {{ form_widget(form.prix, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.prix) }}
                        </div>
                        <div class="form-group">
                            <label>Date Début</label>
                            {{ form_widget(form.dateDeb, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.dateDeb) }}
                        </div>
                        <div class="form-group">
                            <label>Activite</label>
                            {{ form_widget(form.idActivite, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.idActivite) }}
                        </div>
                        <div class="form-group">
                            <label>File</label>
                            {{ form_widget(form.file, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.file) }}
                        </div>
                        <input type="submit" value="Enregistrer" class="btn btn-success" formnovalidate />

                        {{ form_end(form) }}
                    </div>
                    <div class="col-md-6">
                </div>
            </div>
        </div><!-- /.col-->
    </div>
{% endblock %}