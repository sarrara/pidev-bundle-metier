{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
    <section class="contact">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 section-t8">
                    <div class="row">
                        <div class="col-md-7">
                            {{ form_start(form) }}

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_widget(form.titre, { 'attr': {'class': 'form-control form-control-lg form-control-a'} }) }}
                                        {{ form_errors(form.titre) }}
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_widget(form.file, { 'attr': {'class': 'form-control form-control-lg form-control-a'} }) }}
                                        {{ form_errors(form.file) }}
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>

                                <div class="col-md-12 text-center">
                                    <input type="submit" value="Enregistrer" class="btn btn-success" formnovalidate />
                                </div>
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
